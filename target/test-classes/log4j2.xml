<?xml version="1.0" encoding="UTF-8"?>


<Configuration status = "WARN">
	
<Properties>
	<Property name = "basePath">./logs/</Property>
</Properties>
	

<Appenders>
	<Console name = "Console" target = "SYSTEM_OUT">
		<PatternLayout pattern = "%d{HH:mm:ss.SSS} {%t} %.5level %logger{36} - %msg%n"/>
	</Console>
	
	<RollingFile name = "File" fileName = "${basePath}/Luma_AutomationLogs.log" filePttern = "${basePath}/Luma_AutomationLogs.%d{yyyy-MM-DD}">
		<PatternLayout pattern = "%d{HH:mm:ss.SSS} {%t} %.5level %logger{36} - %msg%n"/>
		<sizeBasedTriggeringPolicy size = "5000"/>
	</RollingFile>
				
</Appenders>
	
	<Loggers>
		<Root level = "Off"> <!-- Here you can use multiple log levelss All < treace < Debug < Info < Warn < Error < Fatal < Off-->
			<!-- <AppenderRef ref = "Console"/> -->
			<AppenderRef ref = "File"/>
		</Root>
	</Loggers>
	
</Configuration>
